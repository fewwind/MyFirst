<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="#55000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">
<com.example.fewwind.myfirst.view.MyViewPager
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:text="Serializable" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:text="Serializable" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:text="Serializable" />


</com.example.fewwind.myfirst.view.MyViewPager>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Serializable"
            android:text="Serializable" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Parcelable"
            android:text="Parcelable" />

<!--
        <com.example.fewwind.myfirst.view.SimpleView
            android:id="@+id/my_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent" />-->


        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_logo" />

        <com.example.fewwind.myfirst.view.MyButton
            android:id="@+id/id_btn_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_mode_up" />

        <com.example.fewwind.myfirst.view.MyViewGroup
            android:id="@+id/my_group"
            android:padding="50dp"
            android:background="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.fewwind.myfirst.view.SimpleView
                android:id="@+id/my_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent" />

        </com.example.fewwind.myfirst.view.MyViewGroup>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/id_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_info_outline_black_24dp"
            app:backgroundTint="#ff87ffeb"
            app:borderWidth="0dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:rippleColor="#33728dff">

        </android.support.design.widget.FloatingActionButton>


    </LinearLayout>

  <include layout="@layout/incar_mode"></include>
</android.support.v4.widget.DrawerLayout>
